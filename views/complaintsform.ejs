        <h1>Feedback Form</h1>
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-sm"></div>

                <div class="col-sm">
                    <form action="complaintsform" method="post">
                        <p style="color: black;"><b>First Name</b></p>
                        <input type="text" name="firstname" id="firstname" placeholder="Firstname" autocomplete="off" required>
                        <p style="color: black;"><b>Last Name</b></p>
                        <input type="text" name="lastname" id="lastname" placeholder="Lastname" autocomplete="off" required>
                        <p style="color:black;"> <b>Write Your Feedback Here:</b></p>
                        <textarea name="complaint" id="complaint" cols="30" rows="10"></textarea>

                        <button type="submit" class="btn btn-success">Submit</button>
                    </form>
                </div>
                <div class="col-sm">

                </div>
            </div>
